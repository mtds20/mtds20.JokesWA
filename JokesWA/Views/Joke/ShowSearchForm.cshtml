@{
    ViewData["Title"] = "Search";
}
<h4 class="text-center mb-4">Search Jokes</h4>
<hr />

<div class="search-container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="ShowSearchResults">
                <div class="form-group">
                    <label for="SearchPhrase" class="control-label">Enter keywords:</label>
                    <input name="SearchPhrase" class="form-control" placeholder="Search for jokes..." />
                </div>
                <div class="form-group">
                    <input type="submit" value="Search" class="btn btn-primary btn-block" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
